<config>
    <modules>
        <Fontis_Nab>
            <version>1.0.0</version>
            <depends>
                <Mage_Payment />
            </depends>
        </Fontis_Nab>
    </modules>
    <global>
    	<models>
    		<nab>
	    		<class>Fontis_Nab_Model</class>
	    	</nab>
    	</models>
    	<helpers>
    		<nab>
    			<class>Fontis_Nab_Helper</class>
    		</nab>
    	</helpers>
        <resources>
            <nab_setup>
                <setup>
                    <module>Fontis_Nab</module>
                </setup>
                <connection>
                    <use>directory_setup</use>
                </connection>
            </nab_setup>
            <nab_write>
                <connection>
                    <use>local_write</use>
                </connection>
            </nab_write>
            <nab_read>
                <connection>
                    <use>local_read</use>
                </connection>
            </nab_read>
        </resources>
    </global>
	<default>
        <payment>
            <transact>
            	<active>0</active>
            	<model>nab/transact</model>
            	<username>ABC0001</username>
            	<password>TestPassword</password>
            	<title>Credit Card (NAB Transact)</title>
            	<allowspecific>0</allowspecific>
            	<debug>0</debug>
            	<test>1</test>
            	<cctypes>VI,MC,AE,DI</cctypes>
            	<payment_action>authorize_capture</payment_action>
            </transact>
        </payment>
    </default>
</config>
